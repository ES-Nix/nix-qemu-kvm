#cloud-config
password: ubuntu
chpasswd: { expire: False }
ssh_pwauth: True

packages:
  - rsync
runcmd:
  - curl -L https://github.com/numtide/nix-flakes-installer/releases/download/nix-2.4pre20210126_f15f0b8/install | sudo -u ubuntu env HOME=/root sh -s -- --daemon
  - echo "experimental-features = nix-command flakes" >> /etc/nix/nix.conf
  - nix run nixpkgs#pfetch
  - nix develop github:davhau/mach-nix#shellWith.pandas --command python -c "import pandas; print(pandas.show_versions())" | grep -v None
